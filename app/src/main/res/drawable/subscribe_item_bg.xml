<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="@dimen/dp_1" android:color="@color/tab_stroke_check" />
                    <solid android:color="@color/tab_stroke_check" />
                    <corners android:radius="@dimen/dp_5"></corners>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <shape>
            <stroke android:width="@dimen/dp_1" android:color="@color/grey_search" />
            <solid android:color="@color/tab_stroke_check" />
            <corners android:radius="@dimen/dp_5"></corners>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <stroke android:width="@dimen/dp_1" android:color="@color/grey_search" />
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/dp_5"></corners>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="@dimen/dp_1" android:color="@color/tab_stroke_check" />
            <solid android:color="@color/tab_stroke_check" />
            <corners android:radius="@dimen/dp_5"></corners>
        </shape>
    </item>

    <item android:state_checked="true">
        <shape>
            <stroke android:width="@dimen/dp_1" android:color="@color/tab_stroke_check" />
            <solid android:color="@color/tab_stroke_check" />
            <corners android:radius="@dimen/dp_5"></corners>
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="@dimen/dp_1" android:color="@color/grey_search" />
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/dp_5"></corners>
        </shape>
    </item>
</selector>