<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <include layout="@layout/title_register"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_65">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:text="@string/upload_your_head"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/sp_15" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_15">

                        <ImageView
                            android:id="@+id/iv_logo"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/business_login" />

                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_12"
                            android:layout_toRightOf="@id/iv_logo"
                            android:src="@drawable/returnicon4" />

                    </RelativeLayout>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="@color/grey_search"
                    android:layout_height="@dimen/dp_05"/>
                <RelativeLayout
                    android:id="@+id/rl_choose_hobbies"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_52">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/choose_hobbies"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/sp_15"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/returnicon4"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="@color/grey_search"
                    android:layout_height="@dimen/dp_05"/>
                <RelativeLayout
                    android:id="@+id/rl_labels_please"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_52">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/labels_please"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/sp_15"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/returnicon4"/>
                </RelativeLayout>
                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="@dimen/dp_345"
                    android:layout_height="42.5dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bt_register"
                    android:text="@string/register_now"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_17" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>