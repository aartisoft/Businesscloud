<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/ll_invite_contact"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:padding="@dimen/dp_15"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="25dp"
                android:src="@drawable/career_mine"
                android:layout_height="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:text="个人目标"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:text=""
                android:layout_weight="1"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:src="@drawable/back_mycom"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="#eeeeee"
            android:layout_height="@dimen/dp_1"/>
        <LinearLayout
            android:id="@+id/ll_user_homepage"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:padding="@dimen/dp_15"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="25dp"
                android:src="@drawable/sale_mien"
                android:layout_height="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:text="个人主页"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:text=""
                android:layout_weight="1"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:src="@drawable/back_mycom"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="#eeeeee"
            android:layout_height="@dimen/dp_1"/>
        <LinearLayout
            android:id="@+id/ll_user_present"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:padding="@dimen/dp_15"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="25dp"
                android:src="@drawable/introductionmine"
                android:layout_height="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:text="个人简介"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:text=""
                android:layout_weight="1"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/back_mycom"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#eeeeee"
            android:layout_height="@dimen/dp_1"/>
        <LinearLayout
            android:id="@+id/ll_hobby"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:padding="@dimen/dp_15"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="25dp"
                android:src="@drawable/vector_mine"
                android:layout_height="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:text="兴趣爱好"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:text=""
                android:layout_weight="1"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_hobby"
                android:layout_width="wrap_content"
                android:textColor="@color/gray_active_icon"
                android:text="@string/hobby"
                android:layout_gravity="center"

                android:textSize="15sp"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:src="@drawable/back_mycom"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#eeeeee"
            android:layout_height="@dimen/dp_1"/>
        <LinearLayout
            android:id="@+id/ll_area"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:padding="@dimen/dp_15"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="25dp"
                android:src="@drawable/location_mine"
                android:layout_height="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:text="所在地区"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:text=""
                android:layout_weight="1"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_area"
                android:layout_width="wrap_content"
                android:textColor="@color/gray_active_icon"
                android:text="@string/area"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:src="@drawable/back_mycom"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#f1f2f6"
            android:layout_height="@dimen/dp_10"/>

        <LinearLayout
            android:id="@+id/ll_card_manager"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:padding="@dimen/dp_15"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="25dp"
                android:src="@drawable/invite_contact"
                android:layout_height="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:text="银行卡管理"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:text=""
                android:layout_weight="1"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/back_mycom"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#f1f2f6"
            android:layout_height="@dimen/dp_10"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>