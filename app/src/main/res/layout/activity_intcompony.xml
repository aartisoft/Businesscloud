<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <include layout="@layout/toolbar"></include>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="top|center"
            android:layout_margin="@dimen/dp_10"
            android:layout_height="100dp">
            <EditText
                android:id="@+id/ed_text_content"
                android:padding="@dimen/dp_10"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text=""
                android:minLines="8"
                android:gravity="top"
                android:hint="@string/input_introduction"
                android:background="@drawable/shape_bg_edtext"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_textsize"
            android:layout_gravity="right"
            android:textSize="14sp"
            android:paddingRight="@dimen/dp_10"
            android:textColor="@color/grey_search"
            android:layout_width="wrap_content"
            android:text="300å­—"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:id="@+id/commit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/btn_login_bg"
            android:gravity="center"
            android:textSize="@dimen/sp_17"
            android:padding="@dimen/dp_12"
            android:text="@string/lab_commit"
            android:textColor="@color/White" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>