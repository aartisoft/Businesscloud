<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_112">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="@dimen/dp_63"
                    android:layout_height="@dimen/dp_63"
                    android:src="@drawable/magnifier_search"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_toEndOf="@id/icon"
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/Black"
                    android:maxEms="8"
                    android:textStyle="bold"
                    android:text="阿里巴巴网络技术有限公司"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:background="@drawable/label_check"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:textColor="@color/subscribe_item_text_color"
                    android:text="影响力:19"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/Grey200"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="@dimen/dp_74"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp_11"
                    android:orientation="vertical">
                    <TextView
                        android:text="10"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/subscribe_item_text_color"
                        android:textSize="@dimen/sp_17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/sp_15"
                        android:text="@string/my_collection"
                        android:textColor="@color/Grey800" />
                </LinearLayout>
                <View
                    android:layout_gravity="center"
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_31"
                    android:background="@color/Grey200"
                    />
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp_11"
                    android:orientation="vertical">
                    <TextView
                        android:text="￥ 10.00"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/subscribe_item_text_color"
                        android:textSize="@dimen/sp_17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/sp_15"
                        android:text="@string/account_balance"
                        android:textColor="@color/Grey800" />
                </LinearLayout>
                <View
                    android:layout_gravity="center"
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_31"
                    android:background="@color/Grey200"
                    />
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp_11"
                    android:orientation="vertical">
                    <TextView
                        android:text="10"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/subscribe_item_text_color"
                        android:textSize="@dimen/sp_17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/sp_15"
                        android:text="@string/add_sub_account"
                        android:textColor="@color/Grey800" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="#f1f2f6"
                android:layout_height="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_user_homepage"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:padding="@dimen/dp_15"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="25dp"
                        android:src="@drawable/floor_mycom"
                        android:layout_height="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/floor_mycom"
                        android:textSize="15sp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:text=""
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/back_mycom"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="#eeeeee"
                    android:layout_height="@dimen/dp_1"/>
                <LinearLayout
                    android:id="@+id/ll_invite_contact"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:padding="@dimen/dp_15"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="25dp"
                        android:src="@drawable/introduction_mycom"
                        android:layout_height="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/introduction_mycom"
                        android:textSize="15sp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:text=""
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/back_mycom"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="#eeeeee"
                    android:layout_height="@dimen/dp_1"/>
                <LinearLayout
                    android:id="@+id/ll_cooperation_mycom"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:padding="@dimen/dp_15"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="25dp"
                        android:src="@drawable/cooperation_mycom"
                        android:layout_height="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/cooperation_mycom"
                        android:textSize="15sp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:text=""
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/back_mycom"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="#eeeeee"
                    android:layout_height="@dimen/dp_1"/>
                <LinearLayout
                    android:id="@+id/ll_follow_mycom"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:padding="@dimen/dp_15"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="25dp"
                        android:src="@drawable/follow_mycom"
                        android:layout_height="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/follow_mycom"
                        android:textSize="15sp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:text=""
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/back_mycom"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="#eeeeee"
                    android:layout_height="@dimen/dp_1"/>
                <LinearLayout
                    android:id="@+id/ll_bankcard_mycom"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:padding="@dimen/dp_15"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="25dp"
                        android:src="@drawable/bankcard_mycom"
                        android:layout_height="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/bankcard_mycom"
                        android:textSize="15sp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:text=""
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content" />
                    <!--<TextView-->
                        <!--android:id="@+id/tv_area"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:textColor="@color/gray_active_icon"-->
                        <!--android:text="@string/area"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:textSize="15sp"-->
                        <!--android:layout_marginRight="@dimen/dp_10"-->
                        <!--android:layout_marginLeft="20dp"-->
                        <!--android:layout_height="wrap_content" />-->
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:src="@drawable/back_mycom"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="#f1f2f6"
                    android:layout_height="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_setting_mycom"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:padding="@dimen/dp_15"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="25dp"
                    android:src="@drawable/setting_mycom"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/setting"
                    android:textSize="15sp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:text=""
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/back_mycom"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="#f1f2f6"
                android:layout_height="match_parent"/>

        </android.support.design.widget.AppBarLayout>


</android.support.constraint.ConstraintLayout>