<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="colorPrimary" format="color" />
    <attr name="colorPrimaryDark" format="color" />
    <attr name="colorAccent" format="color" />
    <attr name="textColorPrimary" format="color" />
    <attr name="viewBackground" format="color" />

    <declare-styleable name="CircleImageView">
        <attr name="type" />
        <attr name="borderColor" />
        <attr name="borderWidth" />
        <attr name="rectRoundRadius" />
    </declare-styleable>

    <declare-styleable name="IconListPreference">
        <attr name="iconsDrawables" format="reference" />
    </declare-styleable>

    <!-- loadingView-->
    <declare-styleable name="LoadingView">
        <!--  设置外面进度条的半径 -->
        <attr name="outerCircleRadius" format="dimension|reference" />
        <!--  设置外面进度条的颜色 -->
        <attr name="outerCircleColor" format="color|reference" />
        <!--  设置三角形外接圆的半径 -->
        <attr name="innerTriangleRadius" format="dimension|reference" />
        <!--  设置三角形颜色 -->
        <attr name="innerTriangleColor" format="color|reference" />
        <!--  设置背景的颜色 -->
        <attr name="backgroundColor" format="color|reference" />
        <!--  设置是否需要背景 -->
        <attr name="isNeedBackground" format="boolean" />
        <attr name="strokeWidth" format="dimension|reference" />
    </declare-styleable>


    <declare-styleable name="MultipleStatusView">
        <attr name="loadingView" format="reference"/>
        <attr name="errorView" format="reference"/>
        <attr name="emptyView" format="reference"/>
        <attr name="noNetworkView" format="reference"/>
        <attr name="contentView" format="reference"/>
    </declare-styleable>

    <declare-styleable name="PowerfulEditText">
        <!--图片资源-->
        <attr name="clearDrawable" format="reference"/>
        <attr name="visibleDrawable" format="reference"/>
        <attr name="invisibleDrawable" format="reference"/>
        <!--按钮宽度大小-->
        <attr name="BtnWidth" format="dimension"/>
        <!--按钮间距大小-->
        <attr name="BtnSpacing" format="dimension"/>
        <!--边框颜色和样式-->
        <attr name="styleColor" format="color"/>
        <attr name="borderStyle" format="string" />
    </declare-styleable>

    <declare-styleable name="RoundImageView">
        <attr name="radius" format="reference|dimension" />
    </declare-styleable>

    <string-array name="dlg_image_pick">
        <item>Gallery</item>
        <item>Camera</item>
    </string-array>

    <declare-styleable name="MaskedImageView">
        <attr name="mask" format="integer" />
    </declare-styleable>

    <declare-styleable name="RTCGlView">
        <attr name="mainMirror" format="boolean" />
        <attr name="secondMirror" format="boolean" />
        <attr name="mainCoords" format="reference" />
        <attr name="secondCoords" format="reference" />
    </declare-styleable>

    <declare-styleable name="SeekBarPreference">
        <attr name="min" format="integer" />
        <attr name="stepSize" format="integer" />
    </declare-styleable>

</resources>